<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    tools:context=".ui.profile.ProfileFragment">

    <!-- Top Bar -->
    <ImageView
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/stibar"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/title_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STI 360 Virtual Digital Touring"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/baloopaaji"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Location Label -->
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Building 1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/baloopaaji"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/title_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Left Arrow -->
    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_left"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="@+id/previewCard"
        app:layout_constraintBottom_toBottomOf="@+id/previewCard"
        app:layout_constraintEnd_toStartOf="@+id/previewCard"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:contentDescription="Previous"
        app:tint="#36454F" />

    <!-- Image Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/previewCard"
        android:layout_width="280dp"
        android:layout_height="240dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#1E1E2F"
        app:cardElevation="4dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/previewImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_stilogo" />
    </androidx.cardview.widget.CardView>

    <!-- Right Arrow -->
    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_right"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="@+id/previewCard"
        app:layout_constraintBottom_toBottomOf="@+id/previewCard"
        app:layout_constraintStart_toEndOf="@+id/previewCard"
        android:contentDescription="Next"
        app:tint="#4B82F0" />


</androidx.constraintlayout.widget.ConstraintLayout>