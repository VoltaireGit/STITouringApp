<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#14151B">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingStart="15dp"
        >

        <ImageView

            android:layout_gravity="center"
            android:id="@+id/Login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:src="@drawable/login"
            />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="45dp"
            >

            <TextView
                android:id="@+id/LoginNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Login now"
                android:textColor="@color/blue"
                android:textSize="40sp"
                android:fontFamily="@font/baloopaaji"

                android:layout_marginTop="105dp"
                />


                <TextView
                    android:id="@+id/StudentAccountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="Student Account"
                    android:textSize="18sp"
                    android:fontFamily="@font/baloopaajitwo"
                    />

                <EditText
                    android:id="@+id/StudentAccountInput"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/logintextbox"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/StudentAccountText"/>


                <TextView
                    android:id="@+id/PasswordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="Password"
                    android:textSize="18sp"
                    android:fontFamily="@font/baloopaajitwo"
                    android:layout_below="@+id/StudentAccountInput"
                    />

            <EditText
                android:id="@+id/PasswordInput"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/logintextbox"
                android:layout_margin="10dp"
                android:layout_below="@+id/PasswordText"
                />

            <TextView
                android:id="@+id/ForgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="forgot the password?"
                android:textSize="18sp"
                android:fontFamily="@font/baloopaajitwo"
                android:textColor="@color/blue"
                android:layout_below="@id/PasswordInput"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/LoginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/baloopaaji"
                android:text="Login"
                android:layout_gravity="center"
                android:background="@drawable/loginbutton"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:shadowColor="@color/black"
                android:shadowRadius="10"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/CreateAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Create Account"
                    android:fontFamily="@font/baloopaajitwo"
                    android:textColor="#0E81DB"
                    android:layout_below="@+id/LoginButton"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center" />

                <View
                    android:layout_below="@+id/CreateAccount"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#0E81DB"
                    />


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom|center">

            <TextView
                android:id="@+id/GuestAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIsit as Gest Account"
                android:clickable="true"
                android:focusable="true"
                android:textSize="18sp"
                android:layout_gravity="center|bottom"
                android:fontFamily="@font/baloopaaji"
                android:textColor="@color/orange"
                />

            <View
                android:layout_below="@+id/GuestAccount"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/orange"/>

        </LinearLayout>





    </FrameLayout>



</LinearLayout>